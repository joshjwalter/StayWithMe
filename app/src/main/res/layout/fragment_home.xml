<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.home.HomeFragment">

        <!-- SECTION 1: Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome to StayWithMe"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="12dp"
                app:icon="@drawable/ic_person"
                app:iconSize="24dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- SECTION 2: Session Status -->
        <TextView
            android:id="@+id/session_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:text="No active session"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- SECTION 3: Active Timer (Only shown during session) -->
        <LinearLayout
            android:id="@+id/active_session_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/timer_background"
            android:padding="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Until Next Check-in"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="16dp" />

            <com.joshwalter.staywithme.ui.widgets.CircularProgressTimer
                android:id="@+id/circular_timer"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/total_session_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Time: 2:00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- SECTION 4: Session Settings (Only shown when no session) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/session_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Session Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Duration (minutes, min 5)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="120" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Substances (optional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_substances"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notes (optional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxLines="3" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SECTION 5: Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_session"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:text="START SAFETY SESSION"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_check_in"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:text="I'M OK - CHECK IN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_end_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Session"
                android:textSize="16sp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- SECTION 6: Info Text -->
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_background"
            android:padding="16dp"
            android:text="StayWithMe monitors your safety during substance use and escalates notifications if you don't check in regularly."
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>
</ScrollView>